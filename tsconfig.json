{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "runner/*.ts",
        "custom_typings/*.d.ts",
        "typings/index.d.ts"
    ],
    "files": [
        "runner/browserrunner.ts",
        "runner/paths.ts",
        "runner/plugin.ts",
        "runner/port-scanner.ts",
        "custom_typings/cleankill.d.ts",
        "custom_typings/promisify-node.d.ts",
        "custom_typings/wd.d.ts",
        "typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
